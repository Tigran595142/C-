double sum = 0;        
double max = double.MinValue;  
double number;            
while (true)
{
    number = Convert.ToDouble(Console.ReadLine());  

    if (number == 0) 
        break;

    sum += number;  

    if (number > max) 
        max = number;
}
if (max == double.MinValue)
{
    Console.WriteLine(0);
}
else
{
    Console.WriteLine(sum);
    Console.WriteLine(max);
}
